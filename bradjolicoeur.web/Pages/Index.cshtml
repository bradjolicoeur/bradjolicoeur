@page
@model IndexModel
@using bradjolicoeur.web.Components
@{
    ViewData["Title"] = "Home";
    ViewBag.Description = "Home";
    ViewBag.Image = Model.ImageUrl;
}
@section HeroSection {

<div class="row">
    <div class="hero-container">
        <img style="width:100%;" src="~/images/IMG_20180707_161856v2.jpg" alt="Brad self portrait" />
        <div class="container hero-content">
            <p>
                <h1>@Model.HomePage.HeroTitle</h1>
                <h3>@Model.HomePage.HeroPhrase</h3>
            </p>
        </div>
    </div>
</div>
}

<div class="container">
    <div class="row well">
        <div class="col-sm-2 col-xs-4">
            <img src="@Model.ImageUrl" class="img-responsive" alt="Brad Jolicoeur" />
        </div>
        <div class="col-sm-10 col-xs-8">
            @Html.Raw(MarkdownHelper.Transform(Model.HomePage.Description))
        </div>
    </div>
    <div class="row">
        <h2>Recent Blog Articles</h2>
        <hr/>
        <component type="typeof(RecentBlogArticles)" render-mode="ServerPrerendered" param-Articles="@Model.BlogArticles" />
    </div>
</div>

